{
  "manifest_version": 3,
  "name": "Gemini Sidebar Chat",
  "version": "1.0.0",
  "description": "A clean, modern sidebar chatbot powered by Gemini.",
  "action": {
    "default_title": "Open Gemini Sidebar"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://*/*",
    "http://*/*"
  ]
}


